@model EMovieFinder.Domain.Identity.UserRegistration
@{ 
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
 }
<div class="container">
    <h1>Register</h1>
    @Html.ValidationSummary()
<form asp-action="Register" asp-controller="Account" method="post">

    <div class="registerdiv">

        <div class="form-group col-sm-12">
            <label asp-for="@Model.Name" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Name", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="@Model.Surname" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.Surname, new { placeholder = "Surname", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Surname)
            </div>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>


        <div class="form-group col-sm-12">
            <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="form-group col-sm-12">
            <label asp-for="@Model.MembershipType" class="col-lg-3 control-label"></label>
            <br>
            <div class="col-lg-9">
                @Html.RadioButtonFor(m => m.MembershipType, "1")
                @Html.Label("Month - 1$")
                @Html.RadioButtonFor(m => m.MembershipType, "10")
                @Html.ValidationMessageFor(m => m.MembershipType)
                @Html.Label("Year - 10$")
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12 btn-submit">
                <button type="submit" class="btn btn-success" method="post">Sign Up</button>
            </div>
        </div>

    </div>
    </form>
</div>

