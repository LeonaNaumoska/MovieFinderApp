@model EMovieFinder.Domain.DTO.MovieCartDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <div class="row m-5">
        <a asp-action="DownloadNow" class="btn btn-success">Download Now</a>
    </div>

    <div class="m-5">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Movie Name</th>
                    <th scope="col">Movie Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.MovieInMovieCarts.Count; i++)
                {
                    var item = Model.MovieInMovieCarts[i];

                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.Movie.MovieName</td>
                        <td>@item.Quantity</td>
                        <td><a asp-route-id="@item.MovieId" asp-action="DeleteMovieFromMovieCart" class="btn btn-danger">Delete</a></td>
                    </tr>
                }

            </tbody>

            <tfoot>
                <tr>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>

