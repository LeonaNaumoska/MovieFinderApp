@model List<EMovieFinder.Domain.DomainModels.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i>All Movies</i></h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Movies" asp-action="Create">Add new Movie</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 15rem; height: 28rem;">
                    <img class="card-img-top" src="@item.MovieImage" style="height: 50%" alt="Image for Movie" />

                    <div class="card-body">
                        <h4 class="card-title"><b>@item.MovieName</b></h4>
                        <p class="card-text">Category: @item.MovieCategory</p>
                        <p class="card-text">Rating: @item.Rating</p>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Movies" asp-action="AddMovieToCart" asp-route-id="@item.Id" class="btn btn-info">Add to card</a>
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a class="btn btn-sm btn-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>

                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }

    }
</div>
